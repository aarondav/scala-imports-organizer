<idea-plugin version="2">
  <id>com.scalaImportOrganizer</id>
  <name>Scala Import Organizer</name>
  <version>0.1.1</version>
  <vendor email="aaron.d.dav@gmail.com">Aaron Davidson</vendor>

  <description><![CDATA[
      Best-effort import organization for Scala.
      ]]></description>

  <change-notes><![CDATA[
      <b>0.1.1</b> Released!
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <depends>org.intellij.scala</depends>

  <application-components/>

  <project-components/>

  <actions>
      <action  id="ScalaImportOrganizer" class="com.scalaImportsOrganizer.ScalaImportOrganizerAction" text="Organize Scala Imports">
          <keyboard-shortcut first-keystroke="control shift O" keymap="$default"/>
          <add-to-group group-id="ToolsMenu" anchor="last"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
      <codeStyleSettingsProvider implementation="com.scalaImportsOrganizer.ScalaImportsCodeStyleSettingsProvider"/>
  </extensions>
</idea-plugin>
